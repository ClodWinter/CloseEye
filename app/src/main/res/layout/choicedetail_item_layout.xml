<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/choicedetail_item_iconLayout"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/beauty_1"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:text="01:58"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="滑雪微电影:一个人的冰川"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/choicedetail_item_iconLayout"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/choicedetail_item_iconLayout"
        android:layout_marginLeft="15dp"
        android:maxLines="2"
        android:ellipsize="none"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#运动"
        android:textColor="#e3dfe1"
        android:layout_alignBottom="@+id/choicedetail_item_iconLayout"
        android:layout_toRightOf="@id/choicedetail_item_iconLayout"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/choicedetail_item_tag"
        />
    
    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/detail_share"
        android:layout_alignBottom="@id/choicedetail_item_tag"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />


</RelativeLayout>
