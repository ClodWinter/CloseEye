<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="268dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cn.lizhiyu.closeeye.CustomView.ZYImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/discitem_usericon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/user_icon_0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/discitem_username"
        android:text="浮生若梦"
        android:textSize="16dp"
        android:textColor="#3d3d3d"
        app:layout_constraintTop_toTopOf="@id/discitem_usericon"
        app:layout_constraintLeft_toRightOf="@+id/discitem_usericon"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/discitem_date"
        android:text="娱乐 七分钟前"
        android:textColor="#bebebe"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/discitem_username"
        app:layout_constraintLeft_toLeftOf="@id/discitem_username"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:id="@+id/discitem_title"
        android:gravity="center_vertical|left"
        android:textColor="#3d3d3d"
        android:textSize="18dp"
        android:text="切记,吃饭的时候别看!"
        app:layout_constraintLeft_toLeftOf="@id/discitem_usericon"
        app:layout_constraintTop_toBottomOf="@id/discitem_usericon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        android:id="@+id/discitem_imageslayout"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/discitem_title"
        app:layout_constraintLeft_toLeftOf="@id/discitem_title"
        android:layout_marginTop="5dp"
        android:background="@color/lightgreen">

    </LinearLayout>
    
    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/discitem_sharebtn"
        android:background="@drawable/disc_item_share"
        app:layout_constraintTop_toBottomOf="@id/discitem_imageslayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discitem_sharecount"
        android:textSize="12dp"
        android:text="11"
        android:textColor="#bebebe"
        app:layout_constraintTop_toTopOf="@id/discitem_sharebtn"
        app:layout_constraintLeft_toRightOf="@id/discitem_sharebtn"
        app:layout_constraintBottom_toBottomOf="@id/discitem_sharebtn"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/discitem_replaybtn"
        android:background="@drawable/disc_item_comment"
        app:layout_constraintTop_toTopOf="@id/discitem_sharebtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="180dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discitem_replaycount"
        android:textSize="12dp"
        android:text="11"
        android:textColor="#bebebe"
        app:layout_constraintTop_toTopOf="@id/discitem_replaybtn"
        app:layout_constraintLeft_toRightOf="@id/discitem_replaybtn"
        app:layout_constraintBottom_toBottomOf="@id/discitem_replaybtn"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/discitem_praisebtn"
        android:background="@drawable/disc_item_praise"
        app:layout_constraintTop_toTopOf="@id/discitem_sharebtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="310dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discitem_praisecount"
        android:textSize="12dp"
        android:text="11"
        android:textColor="#bebebe"
        app:layout_constraintTop_toTopOf="@id/discitem_praisebtn"
        app:layout_constraintLeft_toRightOf="@id/discitem_praisebtn"
        app:layout_constraintBottom_toBottomOf="@id/discitem_praisebtn"
        android:layout_marginLeft="5dp"
        />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f5f5f5"
        app:layout_constraintTop_toBottomOf="@id/discitem_sharebtn"
        android:layout_marginTop="14dp"/>

</android.support.constraint.ConstraintLayout>
