<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:minHeight="64dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_item_title"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="推送设置"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:id="@+id/setting_item_content"
            android:textColor="#919191"
            android:textSize="14dp"
            android:text="关注推送、每日精选推送、签到提醒等"
            />

    </LinearLayout>


    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/chevron_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/setting_rightIcon"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/smssdk_line_light_gray"
        />

    <Switch
        android:layout_width="44dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:id="@+id/setting_switch"
        android:theme="@style/mySwitch"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:id="@+id/setting_desc"
        android:textColor="@color/smssdk_line_light_gray"
        android:text="80MB"
        android:layout_toLeftOf="@id/setting_rightIcon"
        />
    
</RelativeLayout>
