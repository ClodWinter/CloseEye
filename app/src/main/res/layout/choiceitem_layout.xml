<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:minHeight="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choieitem_content">

    <ImageView
        android:id="@+id/choiceitem_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:background="@mipmap/choiceitem_cover"
        app:layout_constraintStart_toStartOf="@id/choieitem_content"
        app:layout_constraintEnd_toEndOf="@id/choieitem_content"
        app:layout_constraintTop_toTopOf="@id/choieitem_content"
        app:layout_constraintBottom_toBottomOf="@id/choieitem_content"
        />

    <TextView
        android:id="@+id/choiceitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闭眼啊闭眼啊"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/choieitem_content"
        app:layout_constraintEnd_toEndOf="@id/choieitem_content"
        app:layout_constraintTop_toTopOf="@id/choieitem_content"
        app:layout_constraintBottom_toBottomOf="@id/choieitem_content"
        />


</android.support.constraint.ConstraintLayout>
